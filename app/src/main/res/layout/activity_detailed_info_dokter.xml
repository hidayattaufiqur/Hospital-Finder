        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toBottomOf="@+id/text_namaDokter"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal                :"
        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toBottomOf="@+id/text_namaDokter"
        app:layout_constraintVertical_bias="0.442"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/tarif"
        android:layout_width="24dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toTopOf="@+id/bg3"
        app:layout_constraintVertical_bias="0.638"
        app:srcCompat="@drawable/tarif" />

    <TextView
        android:id="@+id/text_tarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Rp. 178.000"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintHorizontal_bias="0.694"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toBottomOf="@+id/text_namaDokter"
        app:layout_constraintVertical_bias="0.637" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
