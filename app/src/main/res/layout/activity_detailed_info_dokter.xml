    <TextView
        android:id="@+id/text_lokasiRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="RS Hikmah"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintHorizontal_bias="0.674"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toBottomOf="@+id/text_namaDokter"
        app:layout_constraintVertical_bias="0.865" />

    <TextView
        android:id="@+id/text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rumah Sakit       :"
        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toBottomOf="@+id/text_namaDokter"
        app:layout_constraintVertical_bias="0.871"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>